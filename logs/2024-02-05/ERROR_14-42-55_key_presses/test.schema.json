{
    "id": "key_presses",
    "main": {
        "steps": {
            "start": {
                "type": "perform",
                "action": "navigate",
                "args": {
                    "url": "https://onkeydev.pragmaproducts.com/contoso/daily/#dashboard/WorkOrder"
                },
                "next_step": "wait_for_dashboard_grid_to_be_ready",
                "name": "start"
            },
            "wait_for_dashboard_grid_to_be_ready": {
                "type": "wait",
                "action": "attribute",
                "args": {
                    "query": "#dashboard-grid",
                    "attr": "data-loaded",
                    "value": "true"
                },
                "next_step": "select_first_row",
                "name": "wait_for_dashboard_grid_to_be_ready"
            },
            "select_first_row": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "pragma-advanced-grid#dashboard-grid .grid-row"
                },
                "next_step": "press_keyboard_shortcut_on_record",
                "name": "select_first_row"
            },
            "press_keyboard_shortcut_on_record": {
                "type": "perform",
                "action": "press_key",
                "args": {
                    "query": "pragma-advanced-grid#dashboard-grid .grid-row[tabIndex='0']",
                    "key": "SHIFT+F10"
                },
                "next_step": "wait_for_context_menu",
                "name": "press_keyboard_shortcut_on_record"
            },
            "wait_for_context_menu": {
                "type": "wait",
                "action": "time",
                "args": {
                    "timeout": 5
                },
                "next_step": "close_context_menu"
            },
            "close_context_menu": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "pragma-icon-button#btnCloseContextMenu"
                },
                "next_step": "right_click_on_record"
            },
            "right_click_on_record": {
                "type": "perform",
                "action": "context_click",
                "args": {
                    "query": "pragma-advanced-grid#dashboard-grid .grid-row[tabIndex='0']"
                }
            }
        }
    }
}