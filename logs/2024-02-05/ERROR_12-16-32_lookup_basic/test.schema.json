{
    "id": "lookup_basic",
    "main": {
        "steps": {
            "start": {
                "type": "perform",
                "action": "navigate",
                "args": {
                    "url": "https://onkeydev.pragmaproducts.com/contoso/daily/#dashboard/WorkOrder"
                },
                "next_step": "wait_for_idle_cpu",
                "name": "start"
            },
            "wait_for_idle_cpu": {
                "type": "wait",
                "action": "idle",
                "next_step": "wait_for_dashboard_grid_to_be_ready",
                "name": "wait_for_idle_cpu",
                "args": {}
            },
            "wait_for_dashboard_grid_to_be_ready": {
                "type": "wait",
                "action": "attribute",
                "args": {
                    "id": "dashboard-grid",
                    "attr": "status",
                    "value": "ready"
                },
                "next_step": "set_uuid_variables"
            },
            "set_uuid_variables": {
                "type": "system",
                "action": "set_uuid_variables",
                "args": {
                    "variables": [
                        "$data.codeName",
                        "$data.description"
                    ]
                },
                "next_step": "create_work_order_process"
            },
            "create_work_order_process": {
                "type": "system",
                "action": "template",
                "args": {
                    "schema": "workOrderCreate",
                    "process": "work_order_create",
                    "parameters": {
                        "create_btn_selector": "pragma-panel-bar #create",
                        "description_field_selector": "$data.description",
                        "work_required_field_selector": "$data.description",
                        "work_order_code": "$data.codeName"
                    }
                },
                "next_step": "wait_for_work_order_to_be_created"
            },
            "wait_for_work_order_to_be_created": {
                "type": "wait",
                "action": "time",
                "args": {
                    "timeout": 1
                },
                "next_step": "filter_work_order_record"
            },
            "filter_work_order_record": {
                "type": "system",
                "action": "template",
                "args": {
                    "schema": "filterRecord",
                    "process": "filter_for_record",
                    "parameters": {
                        "fetch_all_records_selector": "[for='dashboard-grid'] #prepared-fetch",
                        "filter_button_selector": ".dashboard pr-responsive-dropdown#rd-3 #search-button",
                        "filter_input_selector": ".dashboard pr-responsive-dropdown#rd-3 pragma-filter input[type='search']",
                        "filter_value": "$data.codeName",
                        "internal_filter_btn_selector": ".dashboard pr-responsive-dropdown#rd-3 #filter"
                    }
                },
                "next_step": "select_first_wo_record"
            },
            "select_first_wo_record": {
                "type": "perform",
                "action": "dbl_click",
                "args": {
                    "query": "pragma-advanced-grid#dashboard-grid .grid-row",
                    "timeout": 1
                },
                "next_step": "wait_for_lookup_button"
            },
            "wait_for_lookup_button": {
                "type": "wait",
                "action": "time",
                "args": {
                    "timeout": 2
                },
                "next_step": "save_asset_description_to_variable"
            },
            "save_asset_description_to_variable": {
                "type": "system",
                "action": "properties_to_variables",
                "args": {
                    "dynamic-update #lbl-assetCode": {
                        "value": "$data.assetCodeInputValue"
                    }
                },
                "next_step": "click_lookup_button"
            },
            "click_lookup_button": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "dynamic-update [label='Asset'] #btnPeek"
                },
                "next_step": "wait_for_asset_code_input"
            },
            "wait_for_asset_code_input": {
                "type": "wait",
                "action": "attribute",
                "args": {
                    "query": "dynamic-peek [label='Code']",
                    "attr": "status",
                    "value": "ready"
                },
                "next_step": "assert_input_value"
            },
            "assert_input_value": {
                "type": "assert",
                "action": "value_eq",
                "args": {
                    "query": "dynamic-update #lbl-assetCode",
                    "value": "$data.assetCodeInputValue"
                }
            }
        }
    }
}