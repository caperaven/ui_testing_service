{
    "id": "lookup_tree",
    "main": {
        "steps": {
            "start": {
                "type": "perform",
                "action": "navigate",
                "args": {
                    "url": "https://onkeydev.pragmaproducts.com/demo/daily?AuthenticationProviderName=Development Azure Account/#dashboard/WorkOrder"
                },
                "next_step": "wait_for_dashboard_grid_to_be_ready",
                "name": "start"
            },
            "wait_for_dashboard_grid_to_be_ready": {
                "type": "wait",
                "action": "attribute",
                "args": {
                    "query": "#dashboard-grid",
                    "attr": "status",
                    "value": "ready"
                },
                "next_step": "set_uuid_variables",
                "name": "wait_for_dashboard_grid_to_be_ready"
            },
            "set_uuid_variables": {
                "type": "perform",
                "action": "set_uuid_variables",
                "args": {
                    "variables": [
                        "$d{codeName}",
                        "$d{description}"
                    ]
                },
                "next_step": "create_work_order_process",
                "name": "set_uuid_variables"
            },
            "create_work_order_process": {
                "type": "system",
                "action": "template",
                "args": {
                    "schema": "workOrderCreate",
                    "process": "work_order_create",
                    "parameters": {
                        "create_btn_selector": "pragma-panel-bar #create",
                        "description_field_selector": "e945c81b-25a6-4c5f-82e2-58f0fe2af33a",
                        "work_required_field_selector": "e945c81b-25a6-4c5f-82e2-58f0fe2af33a",
                        "work_order_code": "4af1e695-6ccb-4ff0-a9d5-e866f9438aed"
                    }
                },
                "next_step": "wait_for_work_order_to_be_created",
                "name": "create_work_order_process"
            },
            "wait_for_work_order_to_be_created": {
                "type": "wait",
                "action": "attribute",
                "args": {
                    "query": "pragma-advanced-grid#dashboard-grid",
                    "attr": "data-loaded",
                    "value": "true"
                },
                "next_step": "filter_work_order_record",
                "name": "wait_for_work_order_to_be_created"
            },
            "filter_work_order_record": {
                "type": "system",
                "action": "template",
                "args": {
                    "schema": "filterRecord",
                    "process": "filter_for_record",
                    "parameters": {
                        "fetch_all_records_selector": "[for='dashboard-grid'] #prepared-fetch",
                        "filter_button_selector": ".dashboard pr-responsive-dropdown#rd-3 #search-button",
                        "filter_input_selector": ".dashboard pr-responsive-dropdown#rd-3 pragma-filter input[type='search']",
                        "filter_value": "4af1e695-6ccb-4ff0-a9d5-e866f9438aed",
                        "internal_filter_btn_selector": ".dashboard pr-responsive-dropdown#rd-3 #filter"
                    }
                },
                "next_step": "dblClick_first_wo_record",
                "name": "filter_work_order_record"
            },
            "dblClick_first_wo_record": {
                "type": "perform",
                "action": "dbl_click",
                "args": {
                    "query": "pragma-advanced-grid#dashboard-grid .grid-row"
                },
                "next_step": "wait_for_asset_code_element",
                "name": "dblClick_first_wo_record"
            },
            "wait_for_asset_code_element": {
                "type": "wait",
                "action": "element",
                "args": {
                    "query": "dynamic-update [id='model.assetCode']"
                },
                "next_step": "click_tree_lookup",
                "name": "wait_for_asset_code_element"
            },
            "click_tree_lookup": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "dynamic-update [id='model.assetCode'] #btnTreeLookup"
                },
                "next_step": "wait_for_asset_tree",
                "name": "click_tree_lookup"
            },
            "wait_for_asset_tree": {
                "type": "wait",
                "action": "attribute",
                "args": {
                    "query": "#asset-tree",
                    "attr": "status",
                    "value": "ready"
                },
                "next_step": "wait_for_first_asset",
                "name": "wait_for_asset_tree"
            },
            "wait_for_first_asset": {
                "type": "wait",
                "action": "element",
                "args": {
                    "query": "asset-tree .tree-item:nth-child(2)"
                },
                "next_step": "click_asset_expand_arrow",
                "name": "wait_for_first_asset"
            },
            "click_asset_expand_arrow": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "asset-tree .tree-item:nth-child(2) .tree-item-actions div"
                },
                "next_step": "wait_for_asset",
                "name": "click_asset_expand_arrow"
            },
            "wait_for_asset": {
                "type": "wait",
                "action": "element",
                "args": {
                    "query": "asset-tree .tree-item:nth-child(3) .tree-item-actions div"
                },
                "next_step": "select_sub_asset",
                "name": "wait_for_asset"
            },
            "select_sub_asset": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "asset-tree .tree-item:nth-child(1)"
                },
                "next_step": "save_AssetA_assetCode_to_variable",
                "name": "select_sub_asset"
            },
            "save_AssetA_assetCode_to_variable": {
                "type": "perform",
                "action": "properties_to_variables",
                "args": {
                    "asset-tree .tree-item:nth-child(1) span": {
                        "textContent": "$d{treeItemText}"
                    }
                },
                "next_step": "click_accept",
                "name": "save_AssetA_assetCode_to_variable"
            },
            "click_accept": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": ".dialog-footer #accept"
                },
                "next_step": "assert_input_value_is_same_as_tree_selection",
                "name": "click_accept"
            },
            "assert_input_value_is_same_as_tree_selection": {
                "type": "assert",
                "action": "value_eq",
                "args": {
                    "query": "#lbl-assetCode",
                    "value": "ROOT",
                    "property": "value"
                },
                "name": "assert_input_value_is_same_as_tree_selection"
            }
        }
    }
}