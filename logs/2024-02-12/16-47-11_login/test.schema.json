{
    "id": "login",
    "main": {
        "steps": {
            "start": {
                "type": "perform",
                "action": "navigate",
                "args": {
                    "url": "https://onkeydev.pragmaproducts.com/demo/daily?AuthenticationProviderName=Development Azure Account"
                },
                "next_step": "wait_for_login_tab_to_open_two_items",
                "name": "start"
            },
            "wait_for_login_tab_to_open_two_items": {
                "type": "wait",
                "action": "window_count",
                "args": {
                    "count": 2
                },
                "next_step": "swap_to_new_tab",
                "name": "wait_for_login_tab_to_open_two_items"
            },
            "swap_to_new_tab": {
                "type": "perform",
                "action": "switch_to_tab",
                "args": {
                    "index": 1
                },
                "next_step": "wait_for_user_name",
                "name": "swap_to_new_tab"
            },
            "wait_for_user_name": {
                "type": "wait",
                "action": "element",
                "args": {
                    "query": "input[name='loginfmt']"
                },
                "next_step": "fill_in_user_name",
                "name": "wait_for_user_name"
            },
            "fill_in_user_name": {
                "type": "perform",
                "action": "type_text",
                "args": {
                    "query": "input[name='loginfmt']",
                    "value": "test@pragmadeveloper.onmicrosoft.com"
                },
                "next_step": "for_password_element",
                "name": "fill_in_user_name"
            },
            "for_password_element": {
                "type": "wait",
                "action": "element",
                "args": {
                    "query": "input[name='passwd'][aria-required='true']"
                },
                "next_step": "fill_in_password",
                "name": "for_password_element"
            },
            "fill_in_password": {
                "type": "perform",
                "action": "type_text",
                "args": {
                    "query": "input[name='passwd']",
                    "value": "NtHe7t2EFLqFbM"
                },
                "next_step": "stay_signed_in",
                "name": "fill_in_password"
            },
            "stay_signed_in": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "#idSIButton9"
                },
                "next_step": "switch_to_default",
                "name": "stay_signed_in"
            },
            "switch_to_default": {
                "type": "perform",
                "action": "switch_to_default",
                "next_step": "wait_for_main",
                "name": "switch_to_default",
                "args": {}
            },
            "wait_for_main": {
                "type": "wait",
                "action": "element",
                "args": {
                    "query": "view-container",
                    "timeout": 30
                },
                "name": "wait_for_main"
            }
        }
    }
}